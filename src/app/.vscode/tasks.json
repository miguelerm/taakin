{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "windows": {
        "command": "cmd",
        "args": ["/C"]
    },
    "linux": {
        "command": "sh",
        "args": ["-c"]
    },
    "isShellCommand": true,
    "showOutput": "always",
    "isWatching": true,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "lessc",
            "args": ["npm run lessc"],
            "problemMatcher": "$lessCompile"
        },
        {
            "taskName": "tsc",
            "args": ["npm tsc"],
            "problemMatcher": "$tsc"
        }
    ]
}